{
  "suggest.echodocSupport": true,
  "suggest.maxCompleteItemCount": 20,
  "suggest.enablePreview": true,
  "suggest.enablePreselect": true,

  "diagnostic.errorSign": "-!",
  "diagnostic.warningSign": "-!",
  "diagnostic.infoSign": "-i",
  "diagnostic.hintSign": "-i",
  "diagnostic.virtualText": false,
  //"diagnostic.messageTarget": "echo",
  "diagnostic.virtualTextPrefix": " // ",
  "diagnostic.checkCurrentLine": true,
  "diagnostic.enable": true,
  "diagnostic.enableHighlightLineNumber": false,
  "diagnostic.enableMessage": "jump",

  "refactor.openCommand": "tabe",

  "git.enableGutters": true,
  "git.changedSign.text": "│",
  "git.addedSign.text": "│",
  "git.removedSign.text": ".",
  "git.topRemovedSign.text": "˙",
  "git.changeRemovedSign.text": "│",
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  "git.addGBlameToVirtualText": false,

  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.enableVimDevicons": false,
  "explorer.previewAction.onHover": false,
  "explorer.file.column.indent.indentLine": false,
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", ["expanded?", "collapse", "expand"], "open"]
  },

  "snippets.loadFromExtensions": false,
  "snippets.extends": {
    "typescript": ["javascript"],
    "typescriptreact": ["typescript"]
  },

  "coc.preferences.formatOnSaveFiletypes": [
    "go",
    "css",
    "markdown",
    "json",
    "javascript",
    "javascriptreact",
    "javascript.jsx",
    "typescript",
    "typescriptreact",
    "typescript.tsx",
    "html"
  ],

  "coc.source.tmuxcomplete.enable": true,
  "coc.source.tmuxcomplete.priority": 12,

  "python.jediEnabled": true,

  "codeLens.enable": false,
  "codeLens.separator": "  ",
  "typescript.implementationsCodeLens.enable": false,
  "typescript.referencesCodeLens.enable": false,
  "javascript.implementationsCodeLens.enable": false,
  "javascript.referencesCodeLens.enable": false,

  // Display the 'calculating' decoration (not working?)
  "importCost.showCalculatingDecoration": true,
  "tsserver.npm": "/usr/local/bin/npm",

  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "settings": {
        "codeLens.enable": false
      },
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    }
  }
}
