#!/bin/bash

function omz_cmd_icon {
  local ICON="Ôíâ"
  local COLOR="#6d8086"
  case "$1" in
  "npm" | "npx" | "create-react-app" | "n" | "nd")
    ICON=Óúû
    COLOR='#e8274b'
    ;;
  "yarn")
    ICON=ùîÇ
    COLOR='#f1e05a'
    ;;
  "brew" | "bu")
    ICON=ÔÉº
    COLOR='#e0af68'
    ;;
  "vim" | "v" | "nvim" | "vi")
    ICON=Óò´
    COLOR='#019833'
    ;;
  "python" | "python2" | "python3" | "pip" | "pip2" | "pip3" | "p" | "p3")
    ICON=Óúº
    COLOR='#3572a5'
    ;;
  "ranger" | "ra")
    ICON=ùû§
    COLOR='#e0af68'
    ;;
  "man" | "less" | "cat" | "ls" | "ll" | "la" | "exa" | "history" | "sort" | "uniq" | "head" | "tail" | "bat")
    ICON=Óòí
    COLOR='#519aba'
    ;;
  "tree")
    ICON=Û∞ôÖ
    COLOR='#519aba'
    ;;
  "y" | "youtube-dl" | "ytmdl" | "ym" | "yi")
    ICON=ÔÖ™
    COLOR='#e8274b'
    ;;
  "lldb")
    ICON=ÔÜà
    COLOR='#519aba'
    ;;
  "gdb")
    ICON=ÔÜà
    COLOR='#f88a02'
    ;;
  "make" | "m" | "cmake")
    ICON="ÔÇÖ "
    COLOR='#f14c28'
    ;;
  "git" | "s" | "a" | "cm" | "gca" | "gd" | "gdc" | "gdmb" | "stash" | "pop" | "grs" | "show" | "lg" | "lgh" | "lgmb" | "push" | "co" | "com" | "cof" | "gmm" | "ba" | "baa")
    ICON='ÓúÇ'
    COLOR='#f14c28'
    ;;
  "top" | "htop" | "vtop" | "gtop" | "bpytop")
    ICON=Ôê∑
    COLOR='#31b53e'
    ;;
  "br" | "hub" | "gh")
    ICON=Óúâ
    COLOR='#a074c4'
    ;;
  "grep" | "find" | "ag")
    ICON=ÔÄÇ
    COLOR='#89e051'
    ;;
  "rg" | "fd")
    ICON=ÔÄÇ
    COLOR='#dea584'
    ;;
  "wget" | "curl")
    ICON=ÔÉ≠
    COLOR='#519aba'
    ;;
  "sudo" | "su")
    ICON=ÔÄá
    COLOR='#a074c4'
    ;;
  "cd" | ".." | "..." | "...." | "-" | "open" | "o" | "oo" | "cdg")
    ICON=Óóæ
    COLOR='#519aba'
    ;;
  "rm" | "trash")
    ICON=Ôá∏
    COLOR='#6d8086'
    ;;
  "apt" | "apt-get")
    ICON=Û∞èñ
    COLOR='#dea584'
    ;;
  "cp" | "rsync" | "scp")
    ICON=ÔÉÖ
    COLOR='#519aba'
    ;;
  "docker" | "docker-compose")
    ICON=Óû∞
    COLOR='#519aba'
    ;;
  "gcc" | "g++" | "clang" | "clang++")
    ICON=Óòù
    COLOR='#1b75bb'
    ;;
  "go")
    ICON=Óò¶
    COLOR='#519aba'
    ;;
  "node")
    ICON=Óúò
    COLOR='#e8274b'
    ;;
  "aws")
    ICON=Óû≠
    COLOR='#fb9d3b'
    ;;
  "ping" | "pg" | "pgh")
    ICON=Ô£º
    COLOR='#a074c4'
    ;;
  "time")
    ICON=Û∞îõ
    COLOR='#519aba'
    ;;
  "sleep")
    ICON=Û∞í≤
    COLOR='#519aba'
    ;;
  *)
    local PATH="${1/\~/$HOME}"
    if [[ "$PATH" = "$HOME" ]]; then
      ICON=Û±Çµ
    elif [[ "$1" =~ "Óò´" ]]; then
      ICON=Óò´
      COLOR='#019833'
    elif [[ "$1" =~ "dotfiles" ]]; then
      ICON=Óóº
      COLOR='#519aba'
    elif [[ "$1" =~ "notes" ]]; then
      ICON=Û∞†Æ
      COLOR='#e0af68'
    elif [[ -d "$PATH/node_modules" && -f "$PATH/package.json" ]]; then
      ICON=Óó∫
      COLOR='#519aba'
    elif [[ -d "$PATH/.git" ]]; then
      ICON=Óóª
      COLOR='#519aba'
    elif [[ -d "$PATH" ]]; then
      ICON=Óóø
      COLOR='#3572a5'
    fi
    ;;
  esac
  printf "#[fg=${COLOR}]$ICON"
}

function boxnum {
  local ICON=" Û∞èÄ"
  case "$1" in
  "0") ICON="Û∞é¢" ;;
  "1") ICON="Û∞é•" ;;
  "2") ICON="Û∞é®" ;;
  "3") ICON="Û∞é´" ;;
  "4") ICON="Û∞é≤" ;;
  "5") ICON="Û∞éØ" ;;
  "6") ICON="Û∞é¥" ;;
  "7") ICON="Û∞é∑" ;;
  "8") ICON="Û∞é∫" ;;
  "9") ICON="Û∞éΩ" ;;
  esac
  printf "$ICON"
}

function util_select {
  case "$1" in
  "icon") omz_cmd_icon "$2" ;;
  "boxnum") boxnum "$2" ;;
  esac
}
util_select $@
