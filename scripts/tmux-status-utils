#!/bin/bash

function omz_cmd_icon {
  local ICON="Ôíâ"
  local COLOR="#6d8086"
  case "$1" in
      "npm" | "npx" | "create-react-app")
          ICON=Óúû
          COLOR='#e8274b'
          ;;
      "yarn")
          ICON=ùîÇ
          COLOR='#f1e05a'
          ;;
      "brew" | "bu")
          ICON=ÔÉº
          COLOR='#e0af68'
          ;;
      "vim" | "v" | "nvim" | "vi")
          ICON=Óò´
          COLOR='#019833'
          ;;
      "python" | "python2" | "python3" | "pip" | "pip2" | "pip3" | "p" | "p3")
          ICON=Óúº
          COLOR='#3572a5'
          ;;
      "ranger" | "ra")
          ICON=ùû§
          COLOR='#e0af68'
          ;;
      "man" | "less" | "cat" | "ls" | "ll" | "la" | "exa" | "history" | "sort" | "uniq" | "head" | "tail" | "bat")
          ICON=Óòí
          COLOR='#519aba'
          ;;
      "tree")
          ICON=Ô≠Ñ
          COLOR='#519aba'
          ;;
      "y" | "youtube-dl" | "ytmdl" | "ym" | "yi")
          ICON=ÔÖ™
          COLOR='#e8274b'
          ;;
      "lldb")
          ICON=ÔÜà
          COLOR='#519aba'
          ;;
      "gdb")
          ICON=ÔÜà
          COLOR='#f88a02'
          ;;
      "make" | "m" | "cmake")
          ICON="ÔÇÖ "
          COLOR='#f14c28'
          ;;
      "git" | "s" | "a" | "cm" | "gca" | "gd" | "gdc" | "gdmb" | "stash" | "pop" | "grs" | "show" | "lg" | "lgh" | "lgmb" | "push" | "co" | "com" | "cof" | "gmm" | "ba" | "baa" )
          ICON='ÓúÇ'
          COLOR='#f14c28'
          ;;
      "top" | "htop" | "vtop" | "gtop" | "bpytop")
          ICON=Ôê∑
          COLOR='#31b53e'
          ;;
      "br" | "hub" | "gh")
          ICON=Óúâ
          COLOR='#a074c4'
          ;;
      "grep" | "find" | "ag")
          ICON=ÔÄÇ
          COLOR='#89e051'
          ;;
      "rg" | "fd")
          ICON=ÔÄÇ
          COLOR='#dea584'
          ;;
      "grep" | "ag" | "rg" | "find" | "fd")
          ICON=ÔÄÇ
          COLOR='#89e051'
          ;;
      "wget" | "curl")
          ICON=ÔÉ≠
          COLOR='#519aba'
          ;;
      "sudo" | "su")
          ICON=ÔÄá
          COLOR='#a074c4'
          ;;
      "cd" | ".." | "..." | "...." | "-" | "open" | "o" | "oo" | "cdg")
          ICON=Óóæ
          COLOR='#519aba'
          ;;
      "rm" | "trash")
          ICON=Ôá∏
          COLOR='#6d8086'
          ;;
      "apt" | "apt-get")
          ICON=Ô£ï
          COLOR='#dea584'
          ;;
      "cp" | "rsync" | "scp")
          ICON=ÔÉÖ
          COLOR='#519aba'
          ;;
      "docker" | "docker-compose")
          ICON=Óû∞
          COLOR='#519aba'
          ;;
      "gcc" | "g++" | "clang" | "clang++")
          ICON=Óòù
          COLOR='#1b75bb'
          ;;
      "go")
          ICON=Óò¶
          COLOR='#519aba'
          ;;
      "node")
          ICON=Óúò
          COLOR='#e8274b'
          ;;
      "aws")
          ICON=Óû≠
          COLOR='#fb9d3b'
          ;;
      "ping" | "pg" | "pgh")
          ICON=Ô£º
          COLOR='#a074c4'
          ;;
      "time")
          ICON=Ô®ö
          COLOR='#519aba'
          ;;
      "sleep")
          ICON=Ô¶±
          COLOR='#519aba'
          ;;
      *)
        local PATH="${1/\~/$HOME}"
        if [[ "$PATH" = "$HOME" ]]; then
          ICON=Ôüõ
        elif [[ "$1" =~ "Óò´" ]]; then
          ICON=Óò´
          COLOR='#019833'
        elif [[ "$1" =~ "dotfiles" ]]; then
          ICON=Óóº
        elif [[ "$1" =~ "notes" ]]; then
          ICON=Ô¥¨
        elif [[ -d "$PATH/node_modules" && -f "$PATH/package.json" ]]; then
          ICON=Óó∫
        elif [[ -d "$PATH/.git" ]]; then
          ICON=Óóª
        elif [[ -d "$PATH" ]]; then
          ICON=Óóø
        fi
      ;;
  esac
  printf "#[fg=${COLOR}]$ICON"
}

function boxnum {
  local ICON="Ô¢ø"
  case "$1" in
    "0") ICON="Ô¢°";;
    "1") ICON="Ô¢§";;
    "2") ICON="Ô¢ß";;
    "3") ICON="Ô¢™";;
    "4") ICON="Ô¢≠";;
    "5") ICON="Ô¢∞";;
    "6") ICON="Ô¢≥";;
    "7") ICON="Ô¢∂";;
    "8") ICON="Ô¢π";;
    "9") ICON="Ô¢º";;
  esac
  printf "$ICON"
}

function util_select {
  case "$1" in
    "icon") omz_cmd_icon "$2";;
    "boxnum") boxnum "$2";;
  esac
}
util_select $@
