[filter "media"]
    required = true
    clean = git media clean %f
    smudge = git media smudge %f
[user]
    name = CallumHoward
    email = callumh@cse.unsw.edu.au
[push]
    default = simple
[alias]
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    sb = status -sb
    sl = stash list --pretty=format:'%C(red)%h%C(reset) - %C(yellow)(%gd%C(yellow))%C(reset) %<(70,trunc)%s %C(green)(%cr) %C(bold blue)<%an>%C(reset)'
    rl = reflog --pretty=format:'%Cred%h%Creset %C(yellow)%gd%C(reset) %C(auto)%gs%C(reset) %C(green)(%cr)%C(reset) %C(bold blue)<%an>%Creset' --abbrev-commit
    vimdiff = difftool
    dt = difftool
[pager]
    diff = diff-so-fancy | less --tabs=4 -RFX# --pattern '^(Date|added|deleted|modified): .*$'
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[difftool "vimdiff"]
    #cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
    cmd = nvim -d $BASE $LOCAL
[merge]
    tool = vimdiff
[mergetool "vimdiff"]
    cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[filter "hawser"]
    clean = git hawser clean %f
    smudge = git hawser smudge %f
    required = true
[filter "lfs"]
    clean = git lfs clean %f
    smudge = git lfs smudge %f
    required = true
[core]
    #pager = diff-so-fancy | less --tabs=4 -RFX
[color "diff"]
    meta = 15
    commit = 83
    frag = 4
    old = 160
    new = 83
    whitespace = 160 reverse
[color "diff-highlight"]
    oldNormal = 160
    oldHighlight = 160 52
    newNormal = 83
    newHighlight = 83 22
[credential]
    helper = cache --timeout=3600000
