alias gddmbf='gddmb `gdmb --name-only | fzf -m`'
alias co="git_checkout"
alias cof="ba | cut -c 3- | sed 's#remotes/[^/]*/##' | uniq | fzf --preview='git show --color=always {}' | xargs git checkout"
alias ba="git branch -a"
alias push="git push"
